# Google Sheets Configuration
# The ID of your Google Sheet (found in the URL)
# Example: https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit
GOOGLE_SHEETS_ID=your_sheet_id_here

# Service account email from Google Cloud Console
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Private key from the service account JSON file
# Make sure to keep the quotes and \n characters
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"

# Application Configuration
# Your production URL (used for SEO and metadata)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Your site name
NEXT_PUBLIC_SITE_NAME=Job Board

# Optional: Cache configuration
# Cache duration in milliseconds (default: 5 minutes = 300000)
CACHE_TTL=300000

# Optional: Analytics
# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Optional: Rate limiting
# Enable API rate limiting (true/false)
ENABLE_RATE_LIMIT=true